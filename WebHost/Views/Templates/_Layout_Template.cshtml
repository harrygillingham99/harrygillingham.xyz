<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= htmlWebpackPlugin.options.title %>
    </title>
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/favicon/favicon.ico")">
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/favicon/apple-touch-icon.png")" />
    <link rel="icon" type="image/png" sizes="16x16" href="@Url.Content("~/favicon/favicon-16x16.png")" />
    <link rel="icon" type="image/png" sizes="32x32" href="@Url.Content("~/favicon/favicon-32x32.png")" />

    <% for (var css in htmlWebpackPlugin.files.css) { %>
        <% var url = htmlWebpackPlugin.files.css[css]; %>
        <% if (htmlWebpackPlugin.options.devServer) { %>
        <link href='@Url.Content("<%= url %>")' rel="stylesheet" /><%
        } else { %>
        <link href='@Url.Content("~<%= url %>")' rel="stylesheet">
        <% } %>
    <% } %>

    <% for (var file in htmlWebpackPlugin.files.js) { %>
        <% var url=htmlWebpackPlugin.files.js[file]; %>
            <% if (htmlWebpackPlugin.options.devServer) { %>
                <script defer src='@Url.Content("<%= url %>")' type="text/javascript"></script>
                <% } else { %>
                    <script defer src='@Url.Content("~<%= url %>")'></script>
                    <% } %>
                        <% } %>

</head>

<body class="flex flex-col min-h-screen">
    <div class="flex flex-col">
        @RenderBody()
    </div>
</body>

</html>